@model IEnumerable<WebApplication4.Models.CMarca>

@{
    ViewData["Title"] = "SelectShow";
}

<h1>Marcas</h1>

<p>
    <a asp-action="InsertarOpen">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "ActualizarOpen", new { item.id}) |
                @Html.ActionLink("Delete", "EliminarOpen", new { item.id})
            </td>
        </tr>
}
    </tbody>
</table>
