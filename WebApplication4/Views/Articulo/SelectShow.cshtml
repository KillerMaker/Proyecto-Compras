@model IEnumerable<WebApplication4.Models.CArticulo>

@{
    ViewData["Title"] = "SelectShow";
}
<br />
<h1>Articulos</h1>

<p>
    <a asp-action="InsertarOpen">Create New</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unidadMedida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.existencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unidadMedida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.existencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "ActualizarOpen", new {item.id }) |
                @Html.ActionLink("Delete", "EliminarOpen", new {item.id })
            </td>
        </tr>
}
    </tbody>
</table>
