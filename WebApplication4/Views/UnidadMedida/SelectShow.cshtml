@model IEnumerable<WebApplication4.Models.CUnidadMedida>

@{
    ViewData["Title"] = "SelectShow";
}
<br />
<h1>Unidades de Medida</h1>

<p>
    <a asp-action="InsertarOpen">Create New</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                <input type="submit" class="btn btn-primary" @Html.ActionLink("Edit", "ActualizarOpen", new { item.id }) | />
                <input type="submit" class="btn btn-danger" @Html.ActionLink("Delete", "EliminarOpen", new { item.id }) />
            </td>
        </tr>
}
    </tbody>
</table>
