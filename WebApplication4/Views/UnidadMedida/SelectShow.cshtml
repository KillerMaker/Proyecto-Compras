@model IEnumerable<WebApplication4.Models.CUnidadMedida>

@{
    ViewData["Title"] = "SelectShow";
}
<br />
<h1>Unidades de Medida</h1>

<p>
    <a asp-action="InsertarOpen" class="btn btn-success">Crear Nuevo</a>
</p>
